# Criar dados de exemplo
dates <- c(7,14,21,28,35,42)
severity <- c(0.1,5,10,35,50,60)
data_curva <- data.frame(dates, severity)
# Gráfico de colunas e linha
library(ggplot2)
library(dplyr)
data_curva |>
mutate(severity2 = c(1, 10, 35, 58, 70, 82)) |>
ggplot(aes(dates, severity2)) +
geom_col(fill = "#D3D3D3") +  # barras cinza claro
geom_line(linewidth = 2, color = "#5DADE2") +  # azul suave
geom_point(size = 4, color = "#4D4D4D") +  # pontos cinza escuro
labs(
title = "Progresso da doença ao longo dos dias",
x = "Dias após plantio",
y = "Severidade (%)"
) +
theme_light() +
theme(
plot.title = element_text(face = "bold", size = 14, hjust = 0.5),
axis.title = element_text(size = 12),
axis.text = element_text(size = 11)
)
